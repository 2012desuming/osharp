<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="../../build/public.netcoreapp.props" />
  <Import Project="../../build/version.props" />

  <PropertyGroup>
    <PackageId>OSharpNS.Hangfire</PackageId>
    <Summary>OSharp(.NetStandard2.0) Hangfire 后台任务组件</Summary>
    <Description>OSharp(.NetStandard2.0) Hangfire 后台任务组件，封装基于Hangfire后台任务的服务端实现</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>bin\Debug\</OutputPath>
    <DocumentationFile>bin\Debug\OSharp.Hangfire.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>bin\Release\</OutputPath>
    <DocumentationFile>bin\Release\OSharp.Hangfire.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hangfire" Version="1.7.6" />
    <PackageReference Include="Hangfire.MemoryStorage.Core" Version="1.4.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\OSharp.AspNetCore\OSharp.AspNetCore.csproj" />
  </ItemGroup>

</Project>